<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <div class="container">
      <div class="game-area">
        <div class="pet-area">
          <!-- 精靈的位置 -->
          <img src="/images/kappa.png" alt="Pet" class="pet">
        </div>
        <div class="furniture-area">
          <!-- 家具的位置 -->
          <img src="/images/window.png" alt="Furniture 7" class="furniture BG">
          <img src="/images/furniture.png" alt="Furniture 1" class="furniture">
          <img src="/images/nintendo-switch.png" alt="Furniture 2" class="furniture">
          <img src="/images/racing-car.png" alt="Furniture 3" class="furniture">
          <img src="/images/sport.png" alt="Furniture 4" class="furniture">
          <img src="/images/bath-tub.png" alt="Furniture 5" class="furniture">
          <img src="/images/workspace.png" alt="Furniture 6" class="furniture">
          <!-- 更多家具... -->
          <div class="hint-list">
            <div class="hint">
              <span>效果:+5 XX</span>
              <span>等級:1</span>
              <button class="btn upgrade">升級</button>
            </div>
          </div>
        </div>
        <div class="left-buttons">
          <div class="btn friend"><button class="btn_friend" title="好友">好友</button><img src="/images/friendship.png" alt=""></div>
          <div class="btn sprites"><button class="btn_sprites" title="精靈">精靈</button></div>
          <div class="btn egg"><button class="btn_egg" title="孵蛋">孵蛋</button></div>
          <div class="btn task"><button class="btn_task" title="任務">任務</button></div>
        </div>
        <div class="right-buttons">
          <div class="btn attack"><button class="btn_attack" title="攻擊">攻擊</button></div>
          <div class="btn defend"><button class="btn_defend" title="防禦">防禦</button></div>
          <div class="btn counter"><button class="btn_counter" title="反攻">反攻</button></div>
        </div>
        <div class="bottom-buttons">
          <div class="btn shop"><button class="btn_shop" title="商城">商城</button></div>
          <div class="btn feed"><button class="btn_feed" title="餵食">餵食</button></div>
          <div class="btn play"><button class="btn_play" title="玩耍">玩耍</button></div>
          <div class="btn sleep"><button class="btn_sleep" title="睡覺">睡覺</button></div>
          <div class="btn clean"><button class="btn_clean" title="洗澡">洗澡</button></div>
          <div class="btn talent"><button class="btn_talent" title="才藝">才藝</button></div>
        </div>
      </div>
      <div class="social-page page">
        這是好友
      </div>
      <div class="sprite-page page">
        這是精靈
      </div>
      <div class="eggs-page page">
        這是孵蛋
      </div>
      <div class="tesk-page page">
        這是任務
      </div>
      <div class="shop-page page">
        這是商店
      </div>
      <div class="talent-page page">
        這是才藝
      </div>
      <div class="attack-page page">
        這是攻擊
      </div>
      <div class="defend-page page">
        這是防禦
      </div>
      <div class="counter-page page">
        這是反攻
      </div>
    </div>
    <script src="/js/home.js"></script>
</body>
</html>